        <!-- Comments Section ---------------------------------------------------------------------------------->
        <form method="POST" action="/comments/add/{{eventInfo.event_id}}">
        <div class="mt-12 border-t pt-8" x-data="{ showEmojis: false }">
            <h2 class="text-2xl font-semibold mb-8 flex items-center gap-2">
                <svg
                        class="w-6 h-6 text-gray-600"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24">
                    <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                </svg>
                Comments (24)
            </h2>

            <!-- Add Comment -->
            <div class="mb-8">
                <div class="flex items-start gap-4">
                    <!-- User Avatar -->
                    <div
                            class="w-10 h-10 rounded-full bg-violet-100 flex items-center justify-center flex-shrink-0">
                        <span class="text-violet-600 font-semibold">M</span>
                    </div>

                    <!-- Comment Input Area -->
                    <div class="flex-1">
              <textarea
                      name="comment_content"
                      x-ref="commentText"
                      rows="3"
                      class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-violet-500 focus:ring-2 focus:ring-violet-200 resize-none"
                      placeholder="Share your thoughts about this event..."></textarea>

                        <!-- Action Buttons -->
                        <div class="flex items-center justify-between mt-3">
                            <div class="flex items-center gap-2">

                                <!-- Emoji Picker -->
                                <div class="relative">
                                    <button
                                            @click="showEmojis = !showEmojis"
                                            class="p-2 hover:bg-gray-100 rounded-lg transition-colors">
                                        <svg
                                                class="w-5 h-5 text-gray-500"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24">
                                            <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    </button>

                                    <!-- Emoji Dropdown -->
                                    <div
                                            x-show="showEmojis"
                                            @click.away="showEmojis = false"
                                            class="absolute bottom-full left-0 mb-2 bg-white rounded-xl shadow-lg border border-gray-100 p-3 w-64 grid grid-cols-3 gap-2"
                                            style="display: none">
                                        <button
                                                class="flex items-center justify-center p-3 hover:bg-violet-50 rounded-lg transition-colors text-2xl"
                                                @click="$refs.commentText.value += '👍'; showEmojis = false">
                                            👍
                                        </button>
                                        <button
                                                class="flex items-center justify-center p-3 hover:bg-violet-50 rounded-lg transition-colors text-2xl"
                                                @click="$refs.commentText.value += '❤️'; showEmojis = false">
                                            ❤️
                                        </button>
                                        <button
                                                class="flex items-center justify-center p-3 hover:bg-violet-50 rounded-lg transition-colors text-2xl"
                                                @click="$refs.commentText.value += '😊'; showEmojis = false">
                                            😊
                                        </button>
                                        <button
                                                class="flex items-center justify-center p-3 hover:bg-violet-50 rounded-lg transition-colors text-2xl"
                                                @click="$refs.commentText.value += '🎉'; showEmojis = false">
                                            🎉
                                        </button>
                                        <button
                                                class="flex items-center justify-center p-3 hover:bg-violet-50 rounded-lg transition-colors text-2xl"
                                                @click="$refs.commentText.value += '🔥'; showEmojis = false">
                                            🔥
                                        </button>
                                        <button
                                                class="flex items-center justify-center p-3 hover:bg-violet-50 rounded-lg transition-colors text-2xl"
                                                @click="$refs.commentText.value += '🎸'; showEmojis = false">
                                            🎸
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <button
                                    type="submit"
                                    class="px-6 py-2 bg-violet-600 text-white rounded-lg hover:bg-violet-700 transition-colors">
                                Comment
                            </button>
                        </div>
                    </div>
                </div>
            </div>
</form>
            <!-- Comments List -->
            
            <div class="space-y-6">
            {% for comment in comments %}
                <!-- Comment 1 -->
                <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
                    <div class="flex items-start gap-4">
                        <div
                                class="w-10 h-10 rounded-full bg-orange-100 flex items-center justify-center flex-shrink-0">
                            <span class="text-orange-600 font-semibold">{{comment.username|first|upper}}</span>
                        </div>
                        <div class="flex-1">
                            <div class="flex items-center justify-between mb-2">
                                <div>
                                    <h4 class="font-semibold text-gray-900">{{comment.username}}</h4>
                                    <p class="text-sm text-gray-500">{{comment.commented_at|date('Y-m-d \\a\\t H:i')}}</p>
                                </div>
                                <!-- Comment Options -->
                                {% if comment.user_id == userID %}
                                <div class="relative" x-data="{ showOptions: false }">
                                    <button
                                            @click="showOptions = !showOptions"
                                            class="p-2 hover:bg-gray-100 rounded-lg transition-colors">
                                        <svg
                                                class="w-5 h-5 text-gray-500"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24">
                                            <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                                        </svg>
                                    </button>
                                    <!-- Options Dropdown -->
                                    <div
                                            x-show="showOptions"
                                            @click.away="showOptions = false"
                                            class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-100 py-1"
                                            style="display: none">
                                        <button
                                                class="w-full px-4 py-2 text-left text-sm text-gray-700 hover:bg-gray-50">
                                            Edit
                                        </button>
                                        
                                        <a href="/comments/delete/{{eventInfo.event_id}}/{{comment.comment_id}}"
                                                class="w-full px-4 py-2 text-left text-sm text-red-600 hover:bg-gray-50">
                                            Delete
                                        </a>
                                    </div>
                                </div>
                                
                                {% endif %}
                            </div>
                            <p class="text-gray-600 mb-4">
                                {{comment.comment_content}}
                            </p>
                            <div class="flex items-center gap-6">
                            </div>
                        </div>
                    </div>
                    </div>
                    
                </div>
                {% endfor %}
            </div>
            

            <!-- Load More Comments -->
            <div class="mt-8 text-center">
                <button
                        class="px-6 py-3 bg-gray-50 text-gray-600 rounded-lg hover:bg-gray-100 transition-colors">
                    Load More Comments
                </button>
            </div>
        
        <!-- fin comment section------------------------------------------------------------------------------ -->

    </div>
    <script>
        let pp = $("#LinkPurch").attr("href")
        let quantity = $("#quantity")
        quantity.on("change",()=>{
            let newLink = "/payment/checkout/{{ eventInfo.event_id }}/{{ eventInfo.event_price }}/"+quantity.val()
            document.getElementById('LinkPurch').setAttribute("href",newLink)
        })
        // Ticket quantity controls
        const decreaseBtn = document.getElementById('decreaseTickets');
        const increaseBtn = document.getElementById('increaseTickets');
        const quantityInput = document.querySelector('input[type="number"]');

        decreaseBtn.addEventListener('click', () => {
            if (quantityInput.value > 1) {
                quantityInput.value = parseInt(quantityInput.value) - 1;
            }
        });

        increaseBtn.addEventListener('click', () => {
            if (quantityInput.value < 10) {
                quantityInput.value = parseInt(quantityInput.value) + 1;
            }
        });
    </script>

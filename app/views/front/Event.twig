{% extends("layouts/master.twig") %}
{% block title %}
    Create Event
{% endblock  %}
{% block content %}
    {% include 'layouts/header.twig' with {'isAuth': true , "email" : "jawadboulmal@gmail.com", "username":"Skayologie" }  %}

<!-- Event Hero Section -->
    <div class="grid lg:grid-cols-3 mx-10 my-10 gap-8">
        <!-- Event Image and Details -->
        <div class="lg:col-span-2">
            <div class="relative rounded-2xl overflow-hidden">
                <img
                        src="https://images.unsplash.com/photo-1492684223066-81342ee5ff30"
                        alt="Event"
                        class="w-full h-[400px] object-cover" />
                <div class="absolute top-4 right-4 flex gap-2">
              <span
                      class="bg-white/90 backdrop-blur-sm px-4 py-2 rounded-full text-sm font-semibold text-gray-700">
                ${{ eventInfo.event_price }}
              </span>
                    <span
                            class="bg-red-500/90 backdrop-blur-sm px-4 py-2 rounded-full text-sm font-semibold text-white flex items-center gap-2">
                <svg
                        class="w-4 h-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24">
                  <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                20% OFF
              </span>
                </div>
            </div>

            <!-- Event Details -->
            <div class="mt-8">
                <div class="flex items-center gap-4 mb-4">
              <span class="bg-orange-100 text-orange-600 px-3 py-1 rounded-full text-sm font-semibold" >{{ eventInfo.category_name }}</span>
                    <div class="flex items-center gap-2 text-gray-500">
                        <svg
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24">
                            <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                        125/200 spots left
                    </div>
                </div>
                <h1 class="text-3xl font-bold text-gray-900 mb-4">
                    {{ eventInfo.event_title }}
                </h1>
                <div class="flex gap-6 mb-6">
                    <div class="flex items-center gap-2 text-gray-600">
                        <svg
                                class="w-5 h-5 text-gray-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24">
                            <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        {{ eventInfo.event_date }}
                    </div>
                    <div class="flex items-center gap-2 text-gray-600">
                        <svg
                                class="w-5 h-5 text-gray-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24">
                            <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        7:00 PM - 11:00 PM
                    </div>
                    <div class="flex items-center gap-2 text-gray-600">
                        <svg
                                class="w-5 h-5 text-gray-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24">
                            <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                            <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        {{ eventInfo.event_city }}
                    </div>
                </div>

                <!-- Event Description -->
                <div class="prose max-w-none">
                    <h2 class="text-xl font-semibold mb-4">About This Event</h2>
                    <p class="text-gray-600 mb-6">
                        {{ eventInfo.event_description }}
                    </p>

                    <h3 class="text-lg font-semibold mb-3">What to Expect</h3>
                    <ul class="list-disc list-inside text-gray-600 mb-6">
                        <li>Live performances from 6+ artists</li>
                        <li>Food and beverage vendors</li>
                        <li>VIP lounge access (for VIP ticket holders)</li>
                        <li>Meet & greet opportunities</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Ticket Purchase Section -->
        <div class="lg:col-span-1">
            <div class="sticky top-24">
                <div class="bg-white rounded-2xl shadow-lg p-6">
                    <h2 class="text-xl font-semibold mb-6">Get Your Tickets</h2>

                    <!-- Ticket Types -->
                    <div class="space-y-4 mb-6">
                        <div
                                class="flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:border-orange-500 transition-colors cursor-pointer">
                            <div>
                                <h3 class="font-semibold">General Admission</h3>
                                <p class="text-sm text-gray-500">Regular seating</p>
                            </div>
                            <div class="text-right">
                                <p class="font-semibold">${{ eventInfo.event_price }}</p>
                                <p class="text-sm text-red-500 line-through">$125.00</p>
                            </div>
                        </div>
                    </div>
                    <!-- Promo Code -->
                    <div class="mb-6">
                        <div class="flex gap-2">
                            <input
                                    type="text"
                                    placeholder="Enter promo code"
                                    class="flex-1 px-4 py-2 rounded-lg border border-gray-300 focus:border-orange-500 focus:ring-2 focus:ring-orange-200" />
                            <button
                                    class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors">
                                Apply
                            </button>
                        </div>
                    </div>

                    <!-- Ticket Quantity -->
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2"
                        >Number of Tickets</label
                        >
                        <div class="flex items-center gap-2">
                            <button
                                    class="p-2 rounded-lg border border-gray-300 hover:bg-gray-100"
                                    id="decreaseTickets">
                                -
                            </button>
                            <input id="quantity"
                                    type="number"
                                    value="1"
                                    min="1"
                                    max="10"
                                    title="Number of Tickets"
                                    class="w-20 text-center px-4 py-2 rounded-lg border border-gray-300" />
                            <button
                                    class="p-2 rounded-lg border border-gray-300 hover:bg-gray-100"
                                    id="increaseTickets">
                                +
                            </button>
                        </div>
                    </div>

                    <!-- Total -->
                    <div class="border-t border-gray-200 pt-4 mb-6">
                        <div class="flex justify-between mb-2">
                            <span class="text-gray-600">Subtotal</span>
                            <span>$<span id="originPrice">{{ eventInfo.event_price }}</span></span>
                        </div>
                        <div class="flex justify-between mb-2">
                            <span class="text-gray-600">Discount</span>
                            <span class="text-red-500">-$<span id="MinusePricec">26.00</span></span>
                        </div>
                        <div class="flex justify-between font-semibold">
                            <span>Total</span>
                            <span>$<spen id="ResultFinal">0</spen></span>
                        </div>
                    </div>

                    <!-- Purchase Button -->
                    <a id="LinkPurch" href="/payment/checkout/{{ eventInfo.event_id }}/{{ eventInfo.event_price }}/1">
                        <button
                                class="w-full bg-orange-500 text-white py-3 px-6 rounded-lg font-medium hover:bg-orange-600 transition-colors">
                            Purchase Tickets
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        let pp = $("#LinkPurch").attr("href")
        let quantity = $("#quantity")
        quantity.on("change",()=>{
            let newLink = "/payment/checkout/{{ eventInfo.event_id }}/{{ eventInfo.event_price }}/"+quantity.val()
            document.getElementById('LinkPurch').setAttribute("href",newLink)
        })

    </script>
    {% include 'layouts/footer.twig' %}

{% endblock %}

{# forgot-password.twig #}
{% extends("layouts/master.twig") %}
{% block title %}Forgot Password{% endblock %}
{% block content %}

<div class="min-h-screen">
    <div class="lg:flex min-h-screen">
        <!-- Form Side -->
        <div class="relative w-full lg:w-1/2 flex items-center justify-center p-8 lg:p-12 bg-white">
            <div id="SpinnerLoader" class="hidden w-[100%] z-10 h-[100%] absolute bg-orange-600/50 flex justify-center items-center" role="status">
                <!-- Spinner SVG same as before -->
            </div>
            <div class="w-full max-w-md">
                <!-- Logo same as before -->
                
                <div class="space-y-6">
                    <h1 class="text-2xl font-bold text-gray-900">Reset your password</h1>
                    <form class="space-y-4" method="post">
                        <div class="input-group">
                            <label class="block text-sm font-medium text-gray-700">Email</label>
                            <input id="resetEmail" name="email" type="email" placeholder="name@example.com" 
                                   class="mt-1 block w-full rounded-full border border-gray-300 px-4 py-2 bg-gray-50 focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
                        </div>
                        <button id="resetButton" type="button" 
                                class="w-full py-2 px-4 border border-transparent rounded-full shadow-sm text-sm font-medium text-white bg-orange-500 hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition-all duration-300">
                            Send Reset Code
                        </button>
                    </form>
                    
                    <div class="text-center text-sm">
                        <p class="text-gray-600">
                            Remember your password? 
                            <a href="/login" class="text-orange-600 hover:text-orange-500 font-medium">Sign In</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>

                    <div class="h-[300px] lg:h-auto lg:w-1/2 image-section relative">
                <div
                        class="absolute inset-0 flex items-center justify-center text-white z-10 px-4 lg:px-12">
                    <div class="max-w-md text-center">
                        <h2 class="text-3xl lg:text-4xl font-bold mb-4">
                            Discover Amazing Events
                        </h2>
                        <p class="text-lg opacity-90">
                            Join our community and explore thousands of exciting events
                            happening around you.
                        </p>
                    </div>
                </div>
            </div>
    </div>
</div>

<script>
    $("#resetButton").click(function(){
        $("#SpinnerLoader").removeClass("hidden");
        let email = $("#resetEmail").val();
    });
</script>
{% endblock %}
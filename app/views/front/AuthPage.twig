{% extends("layouts/master.twig") %}
{% block title %}
    Authentication
{% endblock  %}
{% block content %}
<style>
        body {
            font-family: 'Poppins', sans-serif;
        }

        .form-section {
            transition: opacity 0.3s ease-in-out;
        }

        .image-section {
            background-image: url('https://images.unsplash.com/photo-1492684223066-81342ee5ff30');
            background-size: cover;
            background-position: center;
            position: relative;
        }

        .image-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(
                    135deg,
                    rgba(0, 0, 0, 0.7) 0%,
                    rgba(0, 0, 0, 0.5) 100%
            );
        }

        .input-group {
            transform: translateY(20px);
            opacity: 0;
            animation: slideUp 0.5s ease forwards;
        }

        @keyframes slideUp {
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .input-group:nth-child(1) {
            animation-delay: 0.1s;
        }
        .input-group:nth-child(2) {
            animation-delay: 0.2s;
        }
        .input-group:nth-child(3) {
            animation-delay: 0.3s;
        }
        .input-group:nth-child(4) {
            animation-delay: 0.4s;
        }

        .form-switch-enter {
            animation: formEnter 0.6s ease forwards;
        }

        .form-switch-exit {
            animation: formExit 0.6s ease forwards;
        }

        @keyframes formEnter {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes formExit {
            from {
                opacity: 1;
                transform: translateY(0);
            }
            to {
                opacity: 0;
                transform: translateY(-20px);
            }
        }

        @media (min-width: 1024px) {
            .image-section {
                height: 100vh;
            }
        }
    </style>
</head>
<body class="bg-gray-50">
<div x-data="{ isSignUp: true }" class="min-h-screen">
    <!-- Shared Form Content -->
    <template x-if="true">
        <div class="form-content" :class="{'lg:flex min-h-screen': true}">
            <!-- Form Side -->
            <div
                    class="w-full lg:w-1/2 flex items-center justify-center p-8 lg:p-12 bg-white">
                <div class="w-full max-w-md">
                    <!-- Logo -->
                    <div class="flex items-center justify-center mb-8">
                        <div class="flex items-center space-x-2">
                            <svg
                                    class="h-8 w-8 text-orange-600"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24">
                                <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M13 10V3L4 14h7v7l9-11h-7z" />
                            </svg>
                            <span class="text-xl font-bold text-orange-600">Evently</span>
                        </div>
                    </div>

                    <!-- Dynamic Form -->
                    <div class="space-y-6">
                        <!-- Form Header -->
                        <div class="text-center mb-6">
                            <h2
                                    class="text-2xl font-bold text-gray-900"
                                    x-text="isSignUp ? 'Create Account' : 'Welcome Back'"></h2>
                            <p
                                    class="mt-2 text-gray-600"
                                    x-text="isSignUp ? 'Join our community of event enthusiasts' : 'Sign in to your account'"></p>
                        </div>

                        <form class="space-y-4">
                            <!-- Sign Up Fields --
                            
     <template x-if="isSignUp">
                                <div class="space-y-4">
        <div class="input-group grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700">First Name</label>
                <input id="firstName" type="text" title="Enter your first name"
                    placeholder="Enter your first name"
                    class="mt-1 block w-full rounded-full border border-gray-300 px-4 py-2 bg-gray-50 focus:border-orange-500 focus:ring-2 focus:ring-orange-200" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">Last Name</label>
                <input id="lastName" type="text" title="Enter your last name"
                    placeholder="Enter your last name"
                    class="mt-1 block w-full rounded-full border border-gray-300 px-4 py-2 bg-gray-50 focus:border-orange-500 focus:ring-2 focus:ring-orange-200" />
            </div>
        </div>
        <div class="input-group">
            <label class="block text-sm font-medium text-gray-700">Email</label>
            <input id="email" type="email" title="Enter your email address"
                placeholder="name@example.com"
                class="mt-1 block w-full rounded-full border border-gray-300 px-4 py-2 bg-gray-50 focus:border-orange-500 focus:ring-2 focus:ring-orange-200" />
        </div>
        <div class="input-group">
            <label class="block text-sm font-medium text-gray-700">Password</label>
            <input id="password" type="password" title="Enter your password"
                placeholder="Enter your password"
                class="mt-1 block w-full rounded-full border border-gray-300 px-4 py-2 bg-gray-50 focus:border-orange-500 focus:ring-2 focus:ring-orange-200" />
        </div>
        <div class="input-group">
            <label class="block text-sm font-medium text-gray-700">Confirm Password</label>
            <input id="confirmPassword" type="password" title="Confirm your password"
                placeholder="Confirm your password"
                class="mt-1 block w-full rounded-full border border-gray-300 px-4 py-2 bg-gray-50 focus:border-orange-500 focus:ring-2 focus:ring-orange-200" />
        </div>
      </div>
    </template>


                            <!-- Sign In Fields -
       <template x-if="!isSignUp">
                      <div class="space-y-4">
        <div class="input-group">
            <label class="block text-sm font-medium text-gray-700">Email</label>
            <input id="signInEmail" type="email" title="Enter your email address"
                placeholder="name@example.com"
                class="mt-1 block w-full rounded-full border border-gray-300 px-4 py-2 bg-gray-50 focus:border-orange-500 focus:ring-2 focus:ring-orange-200" />
        </div>
        <div class="input-group">
            <label class="block text-sm font-medium text-gray-700">Password</label>
            <input id="signInPassword" type="password" title="Enter your password"
                placeholder="Enter your password"
                class="mt-1 block w-full rounded-full border border-gray-300 px-4 py-2 bg-gray-50 focus:border-orange-500 focus:ring-2 focus:ring-orange-200" />
        </div>
        <div class="flex items-center justify-between text-sm">
            <label class="flex items-center">
                <input id="rememberMe" type="checkbox"
                    class="h-4 w-4 text-orange-600 focus:ring-orange-500 border-gray-300 rounded" />
                <span class="ml-2 text-gray-700">Remember me</span>
            </label>
            <a href="#" class="text-orange-600 hover:text-orange-500">Forgot password?</a>
        </div>
         </div>
        </template>


                            <button
                                    type="submit"
                                    class="w-full py-2 px-4 border border-transparent rounded-full shadow-sm text-sm font-medium text-white bg-orange-500 hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition-all duration-300"
                                    x-text="isSignUp ? 'Sign Up' : 'Sign In'"></button>
                        </form>

                        <!-- Toggle Form Type -->
                        <div class="text-center text-sm">
                            <p class="text-gray-600">
                    <span
                            x-text="isSignUp ? 'Already have an account?' : 'Don't have an account?'"></span>
                                <button
                                        @click="isSignUp = !isSignUp"
                                        class="text-orange-600 hover:text-orange-500 font-medium ml-1"
                                        x-text="isSignUp ? 'Sign In' : 'Sign Up'"></button>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Image Side -->
            <div class="h-[300px] lg:h-auto lg:w-1/2 image-section relative">
                <div
                        class="absolute inset-0 flex items-center justify-center text-white z-10 px-4 lg:px-12">
                    <div class="max-w-md text-center">
                        <h2 class="text-3xl lg:text-4xl font-bold mb-4">
                            Discover Amazing Events
                        </h2>
                        <p class="text-lg opacity-90">
                            Join our community and explore thousands of exciting events
                            happening around you.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </template>
</div>
{% endblock %}



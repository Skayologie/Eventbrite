{% extends("layouts/master.twig") %}
{% block title %}
    Authentication
{% endblock  %}
{% block content %}

<div x-data="{ isSignUp: true }" class="min-h-screen">
    <!-- Shared Form Content -->
    <template x-if="true">
        <div class="form-content" :class="{'lg:flex min-h-screen': true}">
            <!-- Form Side -->
            <div
                    class="w-full lg:w-1/2 flex items-center justify-center p-8 lg:p-12 bg-white">
                <div class="w-full max-w-md">
                    <!-- Logo -->
                    <div class="flex items-center justify-center mb-8">
                        <div class="flex items-center space-x-2">
                            <svg
                                    class="h-8 w-8 text-orange-600"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24">
                                <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M13 10V3L4 14h7v7l9-11h-7z" />
                            </svg>
                            <span class="text-xl font-bold text-orange-600">Evently</span>
                        </div>
                    </div>

                    <!-- Dynamic Form -->

                    {{ message }}
                    <div class="space-y-6">
                        <!-- Form Header -->
                        <div x-data="{ isSignUp: {{ type }} }">
                            <!-- Registration Form -->
                            <form x-show="isSignUp" class="space-y-4" method="post" action="../../../register" enctype="multipart/form-data">
                                <div class="space-y-4">
                                    <div class="input-group grid grid-cols-1 sm:grid-cols-2 gap-4">
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700">First Name</label>
                                            <input name="Registerfname" type="text" title="Enter your first name" placeholder="Enter your first name" class="mt-1 block w-full rounded-full border border-gray-300 px-4 py-2 bg-gray-50 focus:border-orange-500 focus:ring-2 focus:ring-orange-200" />
                                        </div>
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700">Last Name</label>
                                            <input name="Registerlname" type="text" title="Enter your last name" placeholder="Enter your last name" class="mt-1 block w-full rounded-full border border-gray-300 px-4 py-2 bg-gray-50 focus:border-orange-500 focus:ring-2 focus:ring-orange-200" />
                                        </div>
                                    </div>

                                    <div class="input-group">
                                        <label class="block text-sm font-medium text-gray-700">Email</label>
                                        <input name="Registeremail" type="email" title="Enter your email address" placeholder="name@example.com" class="mt-1 block w-full rounded-full border border-gray-300 px-4 py-2 bg-gray-50 focus:border-orange-500 focus:ring-2 focus:ring-orange-200" />
                                    </div>

                                    <div class="input-group">
                                        <label class="block text-sm font-medium text-gray-700">Birthdate</label>
                                        <input name="Registerbirthdate" type="date" title="Enter your birthdate" class="mt-1 block w-full rounded-full border border-gray-300 px-4 py-2 bg-gray-50 focus:border-orange-500 focus:ring-2 focus:ring-orange-200" />
                                    </div>
                                    <div class="input-group">
                                        <label class="block text-sm font-medium text-gray-700">Gender</label>
                                        <select name="Registergender" title="Select your gender" class="mt-1 block w-full rounded-full border border-gray-300 px-4 py-2 bg-gray-50 focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
                                            <option value="" disabled selected>Select your gender</option>
                                            <option value="male">Male</option>
                                            <option value="female">Female</option>
                                        </select>
                                    </div>
                                    <div class="input-group">
                                        <label class="block text-sm font-medium text-gray-700">Bio</label>
                                        <textarea name="Registerbio" rows="3" title="Tell us about yourself" placeholder="Tell us about yourself" class="mt-1 block w-full rounded-lg border border-gray-300 px-4 py-2 bg-gray-50 focus:border-orange-500 focus:ring-2 focus:ring-orange-200"></textarea>
                                    </div>

                                    <div class="input-group">
                                        <label class="block text-sm font-medium text-gray-700">Profile Photo</label>
                                        <input name="Registerphoto" type="file" title="Upload your profile photo" accept="image/*" class="mt-1 block w-full rounded-lg border border-gray-300 px-4 py-2 bg-gray-50 focus:border-orange-500 focus:ring-2 focus:ring-orange-200" />
                                    </div>

                                    <div class="input-group">
                                        <label class="block text-sm font-medium text-gray-700">Password</label>
                                        <input name="Registerpassword" type="password" title="Enter your password" placeholder="Enter your password" class="mt-1 block w-full rounded-full border border-gray-300 px-4 py-2 bg-gray-50 focus:border-orange-500 focus:ring-2 focus:ring-orange-200" />
                                    </div>
                                    <div class="input-group">
                                        <label class="block text-sm font-medium text-gray-700">Confirm Password</label>
                                        <input type="password" title="Confirm your password" placeholder="Confirm your password" class="mt-1 block w-full rounded-full border border-gray-300 px-4 py-2 bg-gray-50 focus:border-orange-500 focus:ring-2 focus:ring-orange-200" />
                                    </div>
                                </div>
                                <button name="submit" type="submit" class="w-full py-2 px-4 border border-transparent rounded-full shadow-sm text-sm font-medium text-white bg-orange-500 hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition-all duration-300">Sign Up</button>
                            </form>
                            <!-- Login Form -->
                            <form x-show="!isSignUp" class="space-y-4" method="post" action="../../../login">
                                <div class="space-y-4">
                                    <div class="input-group">
                                        <label class="block text-sm font-medium text-gray-700">Email</label>
                                        <input name="Loginemail" type="email" title="Enter your email address" placeholder="name@example.com"
                                               class="mt-1 block w-full rounded-full border border-gray-300 px-4 py-2 bg-gray-50 focus:border-orange-500 focus:ring-2 focus:ring-orange-200" />
                                    </div>
                                    <div class="input-group">
                                        <label class="block text-sm font-medium text-gray-700">Password</label>
                                        <input name="Loginpassword" type="password" title="Enter your password" placeholder="Enter your password"
                                               class="mt-1 block w-full rounded-full border border-gray-300 px-4 py-2 bg-gray-50 focus:border-orange-500 focus:ring-2 focus:ring-orange-200" />
                                    </div>
                                    <div class="flex items-center justify-between text-sm">
                                        <label class="flex items-center">
                                            <input type="checkbox" class="h-4 w-4 text-orange-600 focus:ring-orange-500 border-gray-300 rounded" />
                                            <span class="ml-2 text-gray-700">Remember me</span>
                                        </label>
                                        <a href="#" class="text-orange-600 hover:text-orange-500">Forgot password?</a>
                                    </div>
                                </div>
                                <button name="submit" type="submit"
                                        class="w-full py-2 px-4 border border-transparent rounded-full shadow-sm text-sm font-medium text-white bg-orange-500 hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition-all duration-300">
                                    Sign In
                                </button>
                            </form>

                            <!-- Toggle Form Type -->
                            <div class="text-center text-sm">
                                <p class="text-gray-600">
                                    <span x-text="isSignUp ? 'Already have an account?' : 'Don\'t have an account?'"></span>
                                    <button @click="isSignUp = !isSignUp"
                                            class="text-orange-600 hover:text-orange-500 font-medium ml-1"
                                            x-text="isSignUp ? 'Sign In' : 'Sign Up'"></button>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Image Side -->
            <div class="h-[300px] lg:h-auto lg:w-1/2 image-section relative">
                <div
                        class="absolute inset-0 flex items-center justify-center text-white z-10 px-4 lg:px-12">
                    <div class="max-w-md text-center">
                        <h2 class="text-3xl lg:text-4xl font-bold mb-4">
                            Discover Amazing Events
                        </h2>
                        <p class="text-lg opacity-90">
                            Join our community and explore thousands of exciting events
                            happening around you.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </template>
</div>
<script>
</script>
{% endblock %}

